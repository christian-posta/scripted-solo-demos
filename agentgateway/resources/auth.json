{
  "type": "static",
  "admin": {
    "host": "0.0.0.0",
    "port": 19000
  },
  "listeners": [
    {
      "sse": {
        "address": "[::]",
        "port": 3000,
        "authn": {
          "jwt": {
            "issuer": ["me"],
            "audience": ["me.com"],
            "local_jwks": {
              "file_path": "resources/jwt/pub-key"
            }
          }
        },
        "rbac": [
          {
            "name": "default",
            "rules": [
              {
                "key": "sub",
                "value": "me",
                "resource": {
                  "type": "TOOL",
                  "id": "echo",
                  "target": "everything"
                },
                "matcher": "EQUALS"
              }
            ]
          }
        ]
      }
    }
  ],
  "targets": {
    "mcp": [
      {
        "name": "everything",
        "stdio": {
          "cmd": "npx",
          "args": [
            "@modelcontextprotocol/server-everything"
          ]
        }
      },
      {
        "name": "petstore",
        "openapi": {
          "host": "petstore3.swagger.io",
          "port": 443,
          "schema": {
            "file_path": "resources/openapi/petstore.json"
          }
        }
      }
    ]
  }
}