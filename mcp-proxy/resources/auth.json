{
  "type": "static",
  "listener": {
    "sse": {
      "address": "0.0.0.0",
      "port": 3000,
      "authn": {
        "jwt": {
          "issuer": ["me"],
          "audience": ["me.com"],
          "local_jwks": {
            "file_path": "resources/jwt/pub-key"
          }
        }
      }
    }
  },
  "policies": [
    {
      "key": "sub",
      "value": "me",
      "resource": {
        "type": "TOOL",
        "id": "everything:echo"
      },
      "matcher": "EQUALS"
    }
  ],
  "targets": [
    {
      "name": "petstore",
      "openapi": {
        "host": "petstore3.swagger.io",
        "port": 443,
        "schema": {
          "file_path": "resources/openapi/petstore.json"
        }
      }
    },
    {
      "name": "everything",
      "stdio": {
        "cmd": "npx",
        "args": [
          "@modelcontextprotocol/server-everything"
        ]
      }
    }
  ]
}